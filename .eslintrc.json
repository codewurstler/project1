{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "indent": "off",
    "no-plusplus": "off",
    "import/extensions": "off",
    "object-curly-newline": "warn",
    "object-curly-spacing": "warn",
    "prefer-const": "warn",
    "linebreak-style": "off"
  },
  "globals": {
    "Handlebars": true
  }
}
